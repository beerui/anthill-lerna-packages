{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "types": ["vite/client"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES6",
      "ESNext",
      "dom"
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "src/**/*.d.ts",
    "src/types/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "node_modules/tdesign-vue-next/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "public"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
